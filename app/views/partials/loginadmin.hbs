<link rel="stylesheet" href="/css/login.css">
<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-4 col-md-offset-4">
            <div class="account-wall">
                <div class="panel-heading" style="text-align:center;">
                  <h3 class="">LOGIN</h3>
                  <hr>
                </div>
                <img class="profile-img" src="/img/ax.png" alt="">
                <form class="form-signin" action="/admin" method="post">
                    {{> Checkerror}}
                    <input type="text" name="fusername" class="form-control" placeholder="Email" required autofocus>
                    <input type="password" name="fpassword" class="form-control" placeholder="Password" style="margin-top:20px;" required>
                    <button class="btn btn-lg btn-primary btn-block" type="submit">
                      Sign in</button>
                    <label class="checkbox pull-left">
                      <input type="checkbox" value="remember-me">
                      Remember me
                  </label>
                    <a href="#" class="pull-right need-help">Need help? </a><span class="clearfix"></span>
                </form>
            </div>
        </div>
    </div>
</div>
